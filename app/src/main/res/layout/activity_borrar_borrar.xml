<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBorrarBorrar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".ui.admin.BorrarBorrar">

    <TextView
        android:id="@+id/titulo_BorrarBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BORRAR CLIENTE"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/botoncamara_BorrarBorrar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_menu_camera"/>


    <TextView
        android:id="@+id/text_view_nombre_BorrarBorrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textColor="#000000"
        android:padding="8dp"
        android:background="#D0F0F0"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_view_apellidopaterno_BorrarBorrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellido Paterno:"
        android:textColor="#000000"
        android:padding="8dp"
        android:background="#D0F0F0"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_view_apellidomaterno_BorrarBorrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellido Materno:"
        android:textColor="#000000"
        android:padding="8dp"
        android:background="#D0F0F0"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_view_correo_BorrarBorrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo:"
        android:textColor="#000000"
        android:padding="8dp"
        android:background="#D0F0F0"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_view_telefono_BorrarBorrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TelÃ©fono:"
        android:textColor="#000000"
        android:padding="8dp"
        android:background="#D0F0F0"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/text_view_coordenadas_BorrarBorrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordenadas:"
        android:textColor="#000000"
        android:padding="8dp"
        android:background="#D0F0F0"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/boton_eliminar_BorrarBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Eliminar"
        android:backgroundTint="#A0D2DB"
        android:textColor="#FFFFFF" />

</LinearLayout>